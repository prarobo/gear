<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <!-- Determine this using rosrun pointgrey_camera_driver list_cameras.
       If not specified, defaults to first camera found. -->
  <arg name="camera_serial"     default="0" />
  <arg name="calibrated"        default="0" />
  <arg name="frame_rate" 	      default="15" />
  <arg name="base_name"        	default="camera" />
  <arg name="machine"        	  default="localhost" />
  <arg name="nodelet_manager"   default="$(arg base_name)"/>  
  <arg name="session_id"        default="session"/>

  <machine name="machine"       address="$(arg machine)"/>

  <group ns="$(arg base_name)">
    <node pkg="nodelet" type="nodelet" name="$(arg nodelet_manager)" args="manager" machine="machine"/>

    <node pkg="nodelet" type="nodelet" name="$(arg base_name)_camera" machine="machine"
          args="load pointgrey_camera_driver/PointGreyCameraNodelet $(arg nodelet_manager)" >
      <param name="frame_id"  value="$(arg base_name)" />
      <param name="serial"    value="$(arg camera_serial)" />

      <!-- When unspecified, the driver will use the default framerate as given by the
           camera itself. Use this parameter to override that value for cameras capable of
           other framerates. -->
      <param name="frame_rate" value="$(arg frame_rate)" />

      <!-- Use the camera_calibration package to create this file -->
      <param name="camera_info_url" if="$(arg calibrated)"
             value="file://$(env HOME)/.ros/camera_info/$(arg camera_serial).yaml" />
    </node>

    <node pkg="nodelet" type="nodelet" name="$(arg base_name)_image_proc_debayer"
          args="load image_proc/debayer $(arg nodelet_manager) $(arg base_name)/image_color/compressed" machine="machine">
    </node>    
  </group>
</launch>

